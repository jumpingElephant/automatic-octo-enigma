<h3>basic-table</h3>

{{#if isLoading}}
    <div class="table loader">
        <div class="ui active centered inline text loader">Loading</div>
    </div>
{{else}}
    <blockquote class="blockquote">
        <p>total={{totalNumberOfRows}}, page={{page}}, numberOfPages={{numberOfPages}}</p>
    </blockquote>
    <div>
        <table class="table table-striped">
            <thead>
                <tr>
                    {{#each columns as |column|}}
                        <th>{{column.label}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each rows as |row|}}
                    <tr>
                        {{#each columns as |column|}}
                            <td>{{get row column.valuePath}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
            </tbody>
        </table>
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#">
                        <span>&laquo;</span>
                    </a>
                </li>
                {{#each (iterate numberOfPages offset=1) as |item|}}
                    <li class="page-item">
                        <a class="page-link" {{action "navigateToPage" item}} href="#">
                            <span>{{item}}</span>
                        </a>
                    </li>
                {{/each}}
                <li class="page-item">
                    <a class="page-link" href="#">
                        <span>&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
{{/if}}
